<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TerminalCharacter.Views.DeleteScorePage"
            Title="{Binding Title}">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete" Clicked="Delete_Clicked" />
        <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>

        <StackLayout Spacing="20" Padding="15">

            <Label Text="Score Delete Page" FontSize="Small" />

            <Label Text="Name:" FontSize="Medium" />
            <Label Text="{Binding Data.Name}" FontSize="Small"/>

            <Label Text="Score:" FontSize="Medium" />
            <Label Text="{Binding Data.ScoreTotal}" FontSize="Small"/>

            <Label Text="AutoBattle:" FontSize="Medium" />
            <Label Text="{Binding Data.AutoBattle}" FontSize="Small"/>

        </StackLayout>
    </ScrollView>
</ContentPage>